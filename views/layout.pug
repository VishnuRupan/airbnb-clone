html
    head 
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(href="https://fonts.googleapis.com/css2?family=Pattaya&family=Poppins:wght@400;500&display=swap" rel="stylesheet")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous")
        link(rel='stylesheet' href='/styles.css')
        title AirBnB
    body
        .master-container
            header.main-head
                nav
                    h1.logo
                        a(href='/' class="the-thing") airbnb
                    ul
                        if user
                            li
                                a(href='/' class="the-thing")  Home 
                            li
                                a(href='/rooms' class="the-thing")  Rooms 
                            li
                                a(href='/contact' class="the-thing")  Contact 
                            li
                                a(href='/dashboard' class="the-thing")  Dashboard
                            li
                                a.signup(href='/logout' class="the-thing")  Logout

                        else
                            li
                                a(href='/' class="the-thing")  Home 
                            li
                                a(href='/rooms' class="the-thing")  Rooms 
                            li
                                a(href='/contact' class="the-thing")  Contact 
                            li
                                a(href='/login' class="the-thing")  Login 
                            li
                                a.signup(href='/signup' class="the-thing")  Sign-Up
                            
        



            != messages('message', locals)
            if errors  
                    each error, i in errors
                        div(class='alert alert-danger') #{error.msg}
            block content
              



            footer
                .footer-wrapper
                    h5 © 2020 Airbnb, Inc.  All rights reserved   ·   
                        a Privacy·Terms·   
                        a Site Map
                    ul
                        li.footer-li
                            a(href='')
                            img(src='/icons/instagram.svg' alt='hthth')
                        li.footer-li
                            a(href='')
                            img(src='/icons/twitter.svg' alt='hththt')
                        li.footer-li
                            a(href='')
                            img(src='/icons/youtube.svg' alt='hththt')
  


